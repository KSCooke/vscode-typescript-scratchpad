{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "sourceMap": true,
    // "inlineSources": true,
    "target": "es2018",
    "lib": ["es2018", "dom"],
    "rootDir": "src/",
    "typeRoots": [
      "./node_modules/@types/"
    ],
    "outDir": "dist/",
    "plugins": [
      { "name": "typescript-tslint-plugin"}
    ]
  },
  "exclude": [
    "node_modules",
    "jspm_modules",
    "**/*.spec.*",
    "**/*.test.*",
    "**/__tests__/*"
  ]
}
